@model MoiteRecepti.Web.ViewModels.Recipes.RecipeListViewModel
@{
    this.ViewData["Title"] = "All Recipes, Page ...";
}

<h1>@this.ViewData["Title"]</h1>
<hr />
<div class="row">
    @foreach(var recipe in this.Model.Recipes)
    {
        <div class="media col-md-4">
            <img src="@recipe.ImageUrl" width="100px" class="mr-3 img-responsiv" >
            <div class="media-body">
                <h5 class="mt-0">@recipe.Name</h5>
                @recipe.CategoryName
            </div>
        </div>
    }
</div>
<hr />
<partial name="_Paging" model="@Model" />